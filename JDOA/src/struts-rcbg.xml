<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.i18n.encoding" value="utf-8"></constant>
	<!-- 通知公告模块 -->
	<package name="tzgg" extends="struts-default" namespace="/">
		<action name="findAllInformToGrid" class="com.jdoa.basic.rcbg.action.InformAction" method="findAllInformToGrid">
			<param name="aliasname">加载所有通知公告信息</param>
			<param name="authoritytype">-1</param>
		</action>
		<action name="findInformByArgs" class="com.jdoa.basic.rcbg.action.InformAction" method="findInformByArgs">
			<param name="aliasname">根据条件加载通知公告信息</param>
			<param name="authoritytype">-1</param>
		</action>
		<action name="delInform" class="com.jdoa.basic.rcbg.action.InformAction" method="delInform">
			<param name="aliasname">删除通知公告信息</param>
			<param name="authoritytype">-1</param>
		</action>
		<action name="addInform" class="com.jdoa.basic.rcbg.action.InformAction" method="addInform">
			<param name="aliasname">添加通知公告信息</param>
			<param name="authoritytype">-1</param>
		</action>
		<action name="updInform" class="com.jdoa.basic.rcbg.action.InformAction" method="updInform">
			<param name="aliasname">更新通知公告信息</param>
			<param name="authoritytype">-1</param>
		</action>
		<action name="findOneInformDetail" class="com.jdoa.basic.rcbg.action.InformAction" method="findOneInformDetail">
			<param name="aliasname">获取通知公告信息详情</param>
			<param name="authoritytype">-1</param>
		</action>
		<!-- 邮件列表 -->
		<action name="EmailList" class="com.jdoa.basic.rcbg.action.SendEmailAction" method="EmailList">
			<param name="aliasname">邮件列表</param>
			<param name="authoritytype">-1</param>
		</action>
		<action name="sendEmail" class="com.jdoa.basic.rcbg.action.SendEmailAction" method="sendEmail">
			<param name="aliasname">发送邮件</param>
			<param name="authoritytype">-1</param>
		</action>
		<action name="delEmail" class="com.jdoa.basic.rcbg.action.SendEmailAction" method="delEmail">
			<param name="aliasname">删除邮件</param>
			<param name="authoritytype">-1</param>
		</action>
		
	</package>
</struts>